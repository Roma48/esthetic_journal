{% extends 'base.html.twig' %}

{% block body_classes %}blog masonry-style{% endblock %}

{% block content %}
    <main role="main">
        <div id="intro-wrap" data-height="27.778">
            <div id="intro" class="preload darken">
                <div class="intro-item" style="background-image: url(http://lorempixel.com/1500/500/cats/?91986);">
                    <div class="caption">
                        <h2>Пошук</h2>
                    </div><!-- caption -->
                    {#<div class="photocaption">#}
                        {#<h4>A shot by <a href="http://vk.com/awaylastdays" target="blank" alt="Vadim Bruklia">Vadim Bruklia</a></h4>#}
                    {#</div><!-- photocaption -->#}
                </div><!-- intro -->
            </div><!-- intro -->
        </div><!-- intro-wrap -->
        {#{{  dump(articles) }}#}
        <div id="main" class="row">
            <div class="row-content buffer clear-after">
                {#<ul class="inline cats filter-options">#}
                    {#<li data-group="Рубрика">Рубрика</li>#}
                    {#<li data-group="Рубрика">Рубрика</li>#}
                    {#<li data-group="Рубрика">Рубрика</li>#}
                    {#<li data-group="Рубрика">Рубрика</li>#}
                    {#<li data-group="Рубрика">Рубрика</li>#}
                    {#<li data-group="Рубрика">Рубрика</li>#}
                    {#<li data-group="Рубрика">Рубрика</li>#}
                {#</ul>#}
                <div class="grid-items preload">

                    {% for article in articles %}
                        <article
                                class="item column {% if loop.index == 1 or loop.index == 4 or loop.index == 9 %} six {% else %} three {% endif %}">
                            <a href="{{ path('article', {"slug" : article.slug}) }}">
                                <figure style="background-image: url({{ article.image }})">
                                        <span class="blog-overlay">
                                            <i class="icon icon-doc"></i>
                                        </span>
                                </figure>
                                <div class="blog-excerpt">
                                    <div class="blog-excerpt-inner">
                                        <h5 class="meta-post">{{ article.categories.name }}</h5>
                                        <h2>{{ article.title }}</h2>
                                        <p></p>
                                    </div><!-- blog-excerpt-inner -->
                                </div><!-- blog-excerpt -->
                            </a>
                        </article>
                    {% endfor %}

                    <div class="shuffle-sizer three"></div>
                </div><!-- grid-items -->
                <div id="pagination">
                    <ul class="clear-after reset plain">
                        <li id="older" class="pagination-nav"><a href="#" class="button transparent aqua"><i class="fa fa-chevron-left"></i><span class="label">Пред</span></a></li>
                        <li id="newer" class="pagination-nav"><a href="#" class="button transparent aqua"><span class="label">След</span><i class="fa fa-chevron-right"></i></a></li>
                    </ul>
                </div>
            </div><!-- row-content -->
        </div><!-- row -->
    </main><!-- main -->
{% endblock content %}





