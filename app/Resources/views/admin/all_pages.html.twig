{% extends 'admin/index.html.twig' %}

{% block content %}
    <h1>{{ title }}</h1>

    <table class="table table-hover">
        <thead>
        <th width="5%">#</th>
        <th width="40%">Заголовок</th>
        <th width="30%">Опції</th>
        </thead>
        <tbody>
        {% for page in pages %}
            <tr>
                <td>{{ page.id }}</td>
                <td>{{ page.title }}</td>
                <td>
                    <a href="{{ path('page', {"slug": page.slug}) }}" class="btn btn-default">Переглянути</a>
                    <a href="{{ path('edit_page', {"id" : page.id}) }}" class="btn btn-default">Редагувати</a>
                    <a href="{{ path('delete_page', {"id": page.id}) }}" class="btn btn-danger">Видалити</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock content %}

{% block pagination %}
    <div id="pagination">
        <div class="">
            <ul class="pagination">
                {% if pagination > 1 %}
                    {% for page in 1..pagination + 1 %}
                        {% if page == current %}
                            <li><span class="page-numbers current"><span class="num">{{ page }}</span></span>
                            </li>
                        {% else %}
                            <li><a class="page-numbers" href="/admin/pages/{{ page }}">
                                    <span class="num">{{ page }}</span></a></li>
                        {% endif %}
                    {% endfor %}
                {% endif %}
            </ul>
        </div>
    </div>
{% endblock pagination %}